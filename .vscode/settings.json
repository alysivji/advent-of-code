{
    // vscode UI
    "debug.openDebug": "neverOpen",

    // project-specific language settings
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,  // only change from workspace
    },

    // markdown
    "markdownlint.config": {
        "MD001": false,
    },

    // project specific words
    "cSpell.words": [
        "lanternfish",
        "Pathing",
    ],
}
